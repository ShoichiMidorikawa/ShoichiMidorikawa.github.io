#-------------------------------------------------------------------------------
# gnuplotの設定
#-------------------------------------------------------------------------------
reset
set nokey                 # 凡例の非表示

set term gif animate      # 出力をgifアニメに設定
set output "L-spiral.gif"  # 出力ファイル名の設定



#-------------------------------------------------------------------------------
# ループ処理
#-------------------------------------------------------------------------------
if(exist("n")==0 || n<0) n = 0  # ループ変数の初期化

#-------------------------------------------------------------------------------
# プロット
#-------------------------------------------------------------------------------
set parametric
set size square
set xrange[-5*pi:5*pi]
set yrange[-5*pi:5*pi]
set samples 500
a=1
b=0.3

while(n<=20){
plot[-2*pi:4*pi] a*exp(b*t)*cos(t-pi*n/10), a*exp(b*t)*sin(t-pi*n/10)

#-------------------------------------------------------------------------------
# ループ処理
#-------------------------------------------------------------------------------
n = n + 1    
}         # ループ変数の増加

set output
#if ( n < 20 ) reread  # ループの評価
#undefine n            # ループ変数の削除